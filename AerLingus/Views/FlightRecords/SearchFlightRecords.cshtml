@model AerLingus.View_Models.SearchViewModel
@{
    ViewBag.Title = "SearchFlightRecords";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2 class="naslov" style="padding-left:18px;">Search Flight Record</h2>

    <div class="col-md-5" , style="width:350px">
        @using (Ajax.BeginForm("GetSearchedFlightRecords", "FlightRecords", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "searchResults" }))
        {
            <div class="obaveznaPolja">
                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_identifierNo)
                    @Html.TextBoxFor(fr => fr.Search.S_identifierNo, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_otherFFPNo)
                    @Html.TextBoxFor(fr => fr.Search.S_otherFFPNo, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_firstName)
                    @Html.TextBoxFor(fr => fr.Search.S_firstName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_lastName)
                    @Html.TextBoxFor(fr => fr.Search.S_lastName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_departureDate)
                    <div>
                        @*@Html.EditorFor(fr => fr.Search.S_departureDate, new { htmlAttributes = new { @class = "datepicker1 form-control", type = "text", autocomplete = "off" } })*@
                        <input type="date" style="border: 1.25px solid #26aabd; border-radius: 5px; padding: 5px; width: 500px;" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_Origin)
                    @Html.TextBoxFor(fr => fr.Search.S_Origin, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_destination)
                    @Html.TextBoxFor(fr => fr.Search.S_destination, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_bookingClass)
                    @Html.TextBoxFor(fr => fr.Search.S_bookingClass, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_operatingAirline)
                    @Html.TextBoxFor(fr => fr.Search.S_operatingAirline, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_ticketNo)
                    @Html.TextBoxFor(fr => fr.Search.S_ticketNo, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_externalPaxID)
                    @Html.TextBoxFor(fr => fr.Search.S_externalPaxID, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(fr => fr.Search.S_pnrNo)
                    @Html.TextBoxFor(fr => fr.Search.S_pnrNo, new { @class = "form-control" })
                </div>
            </div>

            <div>
                <br />
            </div>

            <input type="submit" class="btn btn-success" name="Submit" value="Submit" />
        }
    </div>

        <div id="searchResults" class="col-md-6">

        </div>
</div>

    

